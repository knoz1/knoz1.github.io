---
permalink: /feed.xml
sitemap: false
layout: none
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xml" href="{{ '/feed.xslt.xml' | absolute_url }}"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ site.lang | default: 'en-US' }}">
  <link href="{{ page.url | absolute_url }}" rel="self" type="application/atom+xml" />
  <link href="{{ '/' | absolute_url }}" rel="alternate" type="text/html" hreflang="{{ site.lang | default: 'en-US' }}" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ page.url | absolute_url | xml_escape }}</id>
  {%- if site.theme_settings.favicon %}
  <icon>{{ site.theme_settings.favicon | absolute_url | xml_escape }}</icon>
  {%- endif -%}
  {%- assign title = site.title | default: site.name -%}
  {%- assign title_separator = site.theme_settings.title_separator | default: 'â€¢' -%}
  {%- if page.collection and page.collection != "posts" -%}
    {%- assign collection = page.collection | capitalize -%}
    {%- assign title = title | append: title_separator | append: collection -%}
  {%- endif -%}
  {%- if page.category -%}
     {%- assign category = page.category | capitalize -%}
    {%- assign title = title | append: title_separator | append: category -%}
  {%- endif -%}
  {%- if title %}
  <title>{{ title | strip_html | normalize_whitespace | smartify }}</title>
  {%- endif -%}
  {%- if site.description %}
  <subtitle>{{ site.description | strip_html | normalize_whitespace | smartify }}</subtitle>
  {%- endif -%}
  {%- if site.theme_settings.author %}
  <author>
    <name>{{ site.theme_settings.author.name | xml_escape }}</name>
    {%- if site.theme_settings.author.email %}
    <email>{{ site.theme_settings.author.email | xml_escape }}</email>
    {%- endif -%}
    {%- if site.theme_settings.author.uri %}
    <uri>{{ site.theme_settings.author.uri | xml_escape }}</uri>
    {%- endif %}
  </author>
  {%- endif -%}
{%- comment -%}
  {%- if page.tags -%}
    {%- assign posts = site.tags[page.tags] -%}
  {%- else -%}
    {%- assign posts = site[page.collection] -%}
  {%- endif -%}
  {%- if page.category -%}
    {%- assign posts = posts | where: "categories", page.category -%}
  {%- endif -%}
{%- endcomment -%}
  {%- unless posts -%}
    {%- assign posts = site.posts -%}
  {%- endunless -%}
  {%- unless site.show_drafts -%}
    {%- assign posts = posts | where_exp: "post", "post.draft != true" -%}
  {%- endunless -%}
  {%- assign posts = posts | sort: "date" | reverse -%}
  {%- assign posts_limit = site.theme_settings.feed.posts_limit | default: 10 -%}
  {%- for post in posts limit: posts_limit %}
  <entry{% if post.lang %}{{" "}}xml:lang="{{ post.lang }}"{% endif %}>
    {%- assign post_title = post.title | strip_html | normalize_whitespace | smartify %}
    <title>{{ post_title }}</title>
    <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post_title }}" />
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
    <id>{{ post.id | absolute_url | xml_escape }}</id>

    {%- assign post_author = post.author | default: post.authors[0] | default: site.theme_settings.author -%}
    {%- assign post_author = site.data.authors[post_author] | default: post_author -%}
    {%- assign post_author_email = post_author.email | default: nil -%}
    {%- assign post_author_uri = post_author.uri | default: nil -%}
    {%- assign post_author_name = post_author.name | default: post_author %}
    <author>
      <name>{{ post_author_name | default: "" | xml_escape }}</name>
      {%- if post_author_email %}
      <email>{{ post_author_email | xml_escape }}</email>
      {%- endif -%}
      {%- if post_author_uri %}
      <uri>{{ post_author_uri | xml_escape }}</uri>
      {%- endif %}
    </author>
    {%- if post.category %}
    <category term="{{ post.category | xml_escape }}" />
    {%- elsif post.categories -%}
      {%- for category in post.categories %}
    <category term="{{ category | xml_escape }}" />
      {%- endfor -%}
    {%- endif %}
    {%- for tag in post.tags -%}
      {%- unless post.categories contains tag %}
    <category term="{{ tag | xml_escape }}" />
      {%- endunless -%}
    {%- endfor -%}
    {%- assign post_summary = post.description | default: post.excerpt -%}
    {%- if post_summary and post_summary != empty %}
    <summary>{{ post_summary | strip_html | normalize_whitespace | smartify }}</summary>
    {%- endif -%}

    {%- assign post_image = post.image.path | default: post.image -%}
    {%- if post_image -%}
      {%- unless post_image contains "://" -%}
        {%- assign post_image = post_image | absolute_url | xml_escape -%}
      {%- endunless %}
    <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ post_image | xml_escape }}" />
    <media:content xmlns:media="http://search.yahoo.com/mrss/" url="{{ post_image | xml_escape }}" medium="image" />
    {%- endif -%}
    {%- assign excerpt_only = post.feed.excerpt_only | default: site.theme_settings.feed.excerpt_only -%}
    {%- unless excerpt_only %}
    <content type="html" xml:base="{{ post.url | absolute_url | xml_escape }}"><![CDATA[{{ post.content | smartify }}]]></content>
    {%- endunless %}
  </entry>
  {%- endfor %}
</feed>
